<openerp>
    <data noupdate="1">

        <!-- Sequence Code Account Proforma Invoice -->
        <record id="seq_account_invoice" model="ir.sequence.type">
            <field name="name">Account Invoice</field>
            <field name="code">account.invoice</field>
        </record>

        <!-- Sequence Account Proforma Invoice Number -->
        <record id="seq_account_invoice_code" model="ir.sequence">
            <field name="name">Account Invoice</field>
            <field name="code">account.invoice</field>
            <field name="prefix">PI/%(y)s/</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>
</openerp>